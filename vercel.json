{
  "version": 2,
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/public",
  "installCommand": "pnpm install",
  "framework": null,
  "functions": {
    "api/index.ts": {
      "includeFiles": "server/**,shared/**,drizzle/**,dist/**",
      "maxDuration": 30,
      "tsconfig": "tsconfig.vercel.json"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/(.*)", "destination": "/api/index.ts" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
