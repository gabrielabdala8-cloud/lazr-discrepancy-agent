{
  "version": 2,
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "pnpm build",
  "framework": null,
  "functions": {
    "api/index.ts": {
      "includeFiles": "server/**,shared/**,drizzle/**,dist/public/**",
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.ts" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
